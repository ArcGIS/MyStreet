{{address-search class="hero-unit" setAddress=(action 'onAddressChanged') address=address candidates=candidates}}

<div class="container">
  <div class="row">
  <div role="main">
    <h2 class="your-location">
    <svg class="address-icon" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" enable-background="new 0 0 120 120" xml:space="preserve" aria-label="{{t 'a11y.location'}}"> <title>{{t 'a11y.location'}}</title> <g id="Icons"> <path d="M59.5,8.230957c-15.973999,0-28.5,6.1063232-28.5,21.2038574v0.4002686V83l28.5,28L88,83V29.835083 v-0.3815918c0-0.0076294,0-0.0148926,0-0.0186768C88,14.3372803,75.4835205,8.230957,59.5,8.230957z M59.5,42.0999985 c-5.3030548,0-9.5999985-4.2970047-9.5999985-9.5999985c0-5.3030567,4.2969437-9.6000004,9.5999985-9.6000004 S69.0999985,27.1969433,69.0999985,32.5C69.0999985,37.8029938,64.8030548,42.0999985,59.5,42.0999985z"/> </g> </svg>
    {{returnedAddress}}
    </h2>

    {{inline-style configHref=configCssUrl paramHref=paramCssUrl}}

    {{inline-style-vars configHref=configJsonUrl paramHref=paramJsonUrl}}

    {{#if returnedAddress}}
      {{#each layers as |layer|}}
      <div class="panel panel-default">
        <div class="panel-heading">
          {{!svg-icon title=layer.title}}
          <h3 class="panel-title topic-title">{{layer.title}}</h3>
        </div>
        <div class="panel-body">
          {{topic-list layer=layer location=geocodedLocation}}
        </div>
      </div>
      {{/each}}
    {{else}}
      <h2 class="your-location">{{t 'index.instructions'}}</h2>
    {{/if}}
    </div>
  </div>
</div>
